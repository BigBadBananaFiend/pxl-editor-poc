{
  "name": "pxl-forge-editor",
  "version": "1.0.0",
  "description": "PixelForge Web Builder Editor",
  "type": "module",
  "scripts": {
    "build": "esbuild ./src/index.ts --outfile=./dist/app.js --bundle --watch",
    "build:dev-server": "esbuild __dev__/server.ts --outfile=./dist/server.js --watch",
    "dev": "concurrently \"pnpm build\" \"pnpm build:dev-server\" \"wait-on ./dist/bundle.js && wait-on ./dist/server.js && node ./dist/server.js\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.17.21",
    "concurrently": "^8.2.2",
    "dotenv": "^16.4.5",
    "esbuild": "0.20.2",
    "express": "^4.18.3",
    "typescript": "^5.4.2",
    "wait-on": "^7.2.0"
  }
}